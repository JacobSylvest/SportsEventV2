<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:background="#2F5597 ">


    <TextView
        android:id="@+id/glemt_pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glemt Password side"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/mere_tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Denne side bliver mulig at udbygge til senere brug."
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/glemt_pass_txt"/>

    <Button
        android:id="@+id/glemt_pass_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text="Tilbage"
        android:textColor="#fff"
        android:textSize="18sp"/>

</RelativeLayout>